  <script is:inline>
    // Mobile Menu Toggle with aria-expanded
    const btn = document.querySelector(
      '[data-collapse-toggle="navbar-default"]'
    );
    const menu = document.getElementById("navbar-default");

    if (btn && menu) {
      btn.addEventListener("click", () => {
        menu.classList.toggle("hidden");
        const isExpanded = !menu.classList.contains("hidden");
        btn.setAttribute("aria-expanded", String(isExpanded));
      });

      // Close mobile menu when a nav link is clicked
      menu.querySelectorAll("a").forEach((link) => {
        link.addEventListener("click", () => {
          menu.classList.add("hidden");
          btn.setAttribute("aria-expanded", "false");
        });
      });
    }

    // Navbar Scroll Effect (throttled with requestAnimationFrame)
    const mainNav = document.getElementById("main-nav");
    let ticking = false;

    window.addEventListener("scroll", () => {
      if (!ticking) {
        window.requestAnimationFrame(() => {
          if (window.scrollY > 50) {
            mainNav.classList.add("nav-scrolled");
            mainNav.classList.remove("py-4");
            mainNav.classList.add("py-2");
          } else {
            mainNav.classList.remove("nav-scrolled");
            mainNav.classList.remove("py-2");
            mainNav.classList.add("py-4");
          }
          ticking = false;
        });
        ticking = true;
      }
    });

    // Gallery Tabs with ARIA support and keyboard navigation
    const galleryTabs = document.querySelectorAll(".gallery-tab");
    const galleryGrids = document.querySelectorAll(".gallery-grid");

    function activateTab(tab) {
      galleryTabs.forEach((t) => {
        t.classList.remove("active", "bg-primary", "text-white", "border-primary");
        t.classList.add("text-gray-400", "border-white/20");
        t.setAttribute("aria-selected", "false");
        t.setAttribute("tabindex", "-1");
      });

      tab.classList.add("active", "bg-primary", "text-white", "border-primary");
      tab.classList.remove("text-gray-400", "border-white/20");
      tab.setAttribute("aria-selected", "true");
      tab.setAttribute("tabindex", "0");
      tab.focus();

      galleryGrids.forEach((grid) => grid.classList.add("hidden"));

      const target = tab.getAttribute("data-target");
      const targetGrid = document.getElementById(target);
      if (targetGrid) targetGrid.classList.remove("hidden");
    }

    if (galleryTabs.length > 0) {
      galleryTabs.forEach((tab, index) => {
        tab.setAttribute("tabindex", index === 0 ? "0" : "-1");
        tab.addEventListener("click", () => activateTab(tab));
      });

      const tabList = document.querySelector('[role="tablist"]');
      if (tabList) {
        tabList.addEventListener("keydown", (e) => {
          const tabs = Array.from(galleryTabs);
          const currentIndex = tabs.indexOf(document.activeElement);
          let nextIndex;
          if (e.key === "ArrowRight" || e.key === "ArrowDown") {
            e.preventDefault();
            nextIndex = (currentIndex + 1) % tabs.length;
          } else if (e.key === "ArrowLeft" || e.key === "ArrowUp") {
            e.preventDefault();
            nextIndex = (currentIndex - 1 + tabs.length) % tabs.length;
          } else if (e.key === "Home") {
            e.preventDefault();
            nextIndex = 0;
          } else if (e.key === "End") {
            e.preventDefault();
            nextIndex = tabs.length - 1;
          }
          if (nextIndex !== undefined) activateTab(tabs[nextIndex]);
        });
      }
    }

    // Gallery Slider Prev/Next buttons
    document.querySelectorAll(".gallery-grid").forEach((panel) => {
      const slider = panel.querySelector(".gallery-slider");
      const prevBtn = panel.querySelector(".slider-prev");
      const nextBtn = panel.querySelector(".slider-next");
      if (!slider) return;

      const getScrollAmount = () => {
        const slide = slider.querySelector(".gallery-slide");
        return slide ? slide.offsetWidth + 16 : 300;
      };

      if (prevBtn) prevBtn.addEventListener("click", () => slider.scrollBy({ left: -getScrollAmount(), behavior: "smooth" }));
      if (nextBtn) nextBtn.addEventListener("click", () => slider.scrollBy({ left: getScrollAmount(), behavior: "smooth" }));
    });

    // Lightbox
    const lightbox = document.getElementById("lightbox");
    const lightboxImg = document.getElementById("lightbox-img");
    const lightboxCounter = document.getElementById("lightbox-counter");
    const lightboxClose = document.getElementById("lightbox-close");
    const lightboxPrev = document.getElementById("lightbox-prev");
    const lightboxNext = document.getElementById("lightbox-next");
    let lightboxImages = [];
    let lightboxIndex = 0;
    let touchStartX = 0;

    function openLightbox(panelId, index) {
      const panel = document.getElementById(panelId);
      if (!panel) return;
      lightboxImages = Array.from(panel.querySelectorAll(".gallery-slide img")).map((img) => img.src);
      if (lightboxImages.length === 0) return;
      lightboxIndex = index;
      updateLightbox();
      lightbox.classList.remove("hidden");
      lightbox.classList.add("flex");
      document.body.style.overflow = "hidden";
    }

    function closeLightbox() {
      lightbox.classList.add("hidden");
      lightbox.classList.remove("flex");
      document.body.style.overflow = "";
    }

    function updateLightbox() {
      lightboxImg.src = lightboxImages[lightboxIndex];
      lightboxCounter.textContent = (lightboxIndex + 1) + " / " + lightboxImages.length;
    }

    function lightboxGo(dir) {
      lightboxIndex = (lightboxIndex + dir + lightboxImages.length) % lightboxImages.length;
      updateLightbox();
    }

    document.querySelectorAll(".gallery-slide").forEach((slide) => {
      slide.addEventListener("click", () => {
        const panel = slide.closest(".gallery-grid");
        if (panel) openLightbox(panel.id, parseInt(slide.dataset.index, 10));
      });
    });

    if (lightboxClose) lightboxClose.addEventListener("click", closeLightbox);
    if (lightboxPrev) lightboxPrev.addEventListener("click", () => lightboxGo(-1));
    if (lightboxNext) lightboxNext.addEventListener("click", () => lightboxGo(1));

    lightbox.addEventListener("click", (e) => {
      if (e.target === lightbox || e.target.id === "lightbox-img-container") closeLightbox();
    });

    document.addEventListener("keydown", (e) => {
      if (lightbox.classList.contains("hidden")) return;
      if (e.key === "Escape") closeLightbox();
      else if (e.key === "ArrowLeft") lightboxGo(-1);
      else if (e.key === "ArrowRight") lightboxGo(1);
    });

    lightbox.addEventListener("touchstart", (e) => { touchStartX = e.changedTouches[0].screenX; }, { passive: true });
    lightbox.addEventListener("touchend", (e) => {
      const diff = e.changedTouches[0].screenX - touchStartX;
      if (Math.abs(diff) > 50) lightboxGo(diff > 0 ? -1 : 1);
    });

    // Intersection Observer for Scroll Animations
    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            entry.target.classList.add("reveal-visible");
          }
        });
      },
      { threshold: 0.1 }
    );

    document.querySelectorAll(".reveal").forEach((el) => observer.observe(el));

    // Dojo Slider with cleanup
    const dojoImages = document.querySelectorAll("#dojo-slider .slider-image");
    let currentDojoImage = 0;

    if (dojoImages.length > 0) {
      const sliderId = setInterval(() => {
        dojoImages[currentDojoImage].classList.remove("opacity-100");
        dojoImages[currentDojoImage].classList.add("opacity-0");

        currentDojoImage = (currentDojoImage + 1) % dojoImages.length;

        dojoImages[currentDojoImage].classList.remove("opacity-0");
        dojoImages[currentDojoImage].classList.add("opacity-100");
      }, 5000);

      window.addEventListener("beforeunload", () => clearInterval(sliderId));
    }

    // Training Card Background Sliders
    document.querySelectorAll(".training-card-slider").forEach((slider) => {
      const imgs = slider.querySelectorAll("img");
      let current = 0;
      if (imgs.length > 1) {
        const id = setInterval(() => {
          imgs[current].classList.remove("opacity-100");
          imgs[current].classList.add("opacity-0");
          current = (current + 1) % imgs.length;
          imgs[current].classList.remove("opacity-0");
          imgs[current].classList.add("opacity-100");
        }, 4000);
        window.addEventListener("beforeunload", () => clearInterval(id));
      }
    });

    // Fix: Force scroll to top on reload
    if (history.scrollRestoration) {
      history.scrollRestoration = "manual";
    }
    window.scrollTo(0, 0);
  </script>
